---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import cskLogo from "../assets/logos/csk.png";
import miLogo from "../assets/logos/mi.png";
import rcbLogo from "../assets/logos/rcb.png";
import kkrLogo from "../assets/logos/kkr.png";
import srhLogo from "../assets/logos/srh.png";
import rrLogo from "../assets/logos/rr.png";

const teams = [
    {
        id: "rcb",
        name: "Royal Challengers Bangalore",
        color: "bg-red-600",
        logo: rcbLogo,
    },
    {
        id: "csk",
        name: "Chennai Super Kings",
        color: "bg-yellow-400",
        logo: cskLogo,
    },
    {
        id: "mi",
        name: "Mumbai Indians",
        color: "bg-blue-600",
        logo: miLogo,
    },
    {
        id: "kkr",
        name: "Kolkata Knight Riders",
        color: "bg-purple-600",
        logo: kkrLogo,
    },
    {
        id: "srh",
        name: "Sunrisers Hyderabad",
        color: "bg-orange-500",
        logo: srhLogo,
    },
    {
        id: "rr",
        name: "Rajasthan Royals",
        color: "bg-pink-500",
        logo: rrLogo,
    },
];
---

<Layout>
    <body class="bg-gray-100 min-h-screen">
        <main class="container mx-auto px-4 py-8 min-h-[calc(100svh-72px)]">
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-gray-800 mb-4">
                    IPL Team Profile Picture Generator
                </h1>
                <p class="text-xl text-gray-600">
                    Create your custom IPL team-themed profile picture in
                    seconds!
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    teams.map((team) => (
                        <a
                            href={`/${team.id}`}
                            class="transform hover:scale-105 transition-transform duration-200"
                        >
                            <div
                                class={`${team.color} rounded-lg shadow-lg p-6 flex flex-col items-center`}
                            >
                                <Image
                                    src={team.logo}
                                    alt={`${team.name} logo`}
                                    class="w-32 h-32 object-contain mb-4"
                                />
                                <h2 class="text-white text-xl font-semibold text-center">
                                    {team.name}
                                </h2>
                            </div>
                        </a>
                    ))
                }
            </div>

            <div class="mt-12 text-center">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">
                    How It Works
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <div class="text-3xl mb-4">1️⃣</div>
                        <h3 class="text-xl font-semibold mb-2">
                            Choose Your Team
                        </h3>
                        <p class="text-gray-600">
                            Select your favorite IPL team from the options above
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <div class="text-3xl mb-4">2️⃣</div>
                        <h3 class="text-xl font-semibold mb-2">
                            Upload Your Photo
                        </h3>
                        <p class="text-gray-600">
                            Upload a clear photo of yourself to customize
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <div class="text-3xl mb-4">3️⃣</div>
                        <h3 class="text-xl font-semibold mb-2">
                            Generate & Download
                        </h3>
                        <p class="text-gray-600">
                            Get your custom team-themed profile picture
                            instantly
                        </p>
                    </div>
                </div>
            </div>
        </main>
    </body>
</Layout>
